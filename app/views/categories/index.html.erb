<h1 class="text-center">Listando Categorias</h1>

<div class="col-md-12">

  <div class="col-md-4 col-md-offset-4">

    <%= link_to new_category_path, class: "btn btn-primary" do %>

      <span class="glyphicon glyphicon-plus"></span>
      Novo

    <% end %>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Descrição</th>
        </tr>
      </thead>
      <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.description %></td>
          <td>
            <%= link_to edit_category_path(category), class: "btn btn-xs btn-warning" do %>

              <span class="glyphicon glyphicon-pencil"></span>

            <% end %>

            <%= link_to category_path(category), class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Excluir #{category.description}?" } do %>

              <span class="glyphicon glyphicon-remove"></span>

            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <%= link_to "Voltar", root_path, class: "btn btn-danger" %>

  </div>
</div>
