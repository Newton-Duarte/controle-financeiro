<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="row text-center">
      <div class="col-md-4 col-md-offset-4">
        <label class="radio-inline">
          <%= f.radio_button :entry_type, 'Despesa', :checked => true %>
          Despesa
        </label>
        <label class="radio-inline">
          <%= f.radio_button :entry_type, 'Receita' %>
          Receita
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= f.label :description %><br>
        <%= f.text_field :description, class: "form-control", placeholder: "Descrição do lançamento" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= f.label :amount %>
        <%= f.text_field :amount, class: "form-control", placeholder: "Valor do lançamento" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= f.label :date %>
        <%= f.text_field :date, class: "form-control", placeholder: "Data do lançamento" %>
        <div class="checkbox">
          <label>
            <%= f.check_box :status, {class: "checkbox"}, "Finalizado", "Pendente" %>
            Finalizado?
          </label>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= f.label :account_id %>
        <%= f.collection_select :account_id, @account_options_for_select, :id, :description, {}, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= f.label :category_id %>
        <%= f.collection_select :category_id, @category_options_for_select, :id, :description, {}, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= f.label :obs %>
        <%= f.text_area :obs, cols: 50, rows: 5, class: "form-control", placeholder: "Obs..." %>
      </div>
    </div>
  </div>

  <div class="text-center">
    <%= link_to "Voltar", entries_path, class: "btn btn-danger" %>
    <%= f.submit "Confirmar", class: "btn btn-success" %>
  </div>
<% end %>
