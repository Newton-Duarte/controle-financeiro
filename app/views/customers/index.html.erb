<h1 class="text-center">Listando Clientes</h1>

<div class="col-md-12">

  <div class="col-md-6 col-md-offset-3">

    <%= link_to new_customer_path, class: "btn btn-primary" do %>

      <span class="glyphicon glyphicon-plus"></span>
      Novo

    <% end %>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Nome/Raz√£o Social</th>
          <th>Apelido/Fantasia</th>
          <th>CPF/CNPJ</th>
          <th>Tipo de Pessoa</th>
        </tr>
      </thead>
      <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= customer.nome_razao_social %></td>
          <td><%= customer.apelido_fantasia %></td>
          <td><%= customer.cpf_cnpj %></td>
          <td><%= customer.customer_type %></td>
          <td>
            <%= link_to edit_customer_path(customer), class: "btn btn-xs btn-warning" do %>

              <span class="glyphicon glyphicon-pencil"></span>

            <% end %>

            <%= link_to customer_path(customer), class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Excluir #{customer.nome_razao_social}" } do %>

              <span class="glyphicon glyphicon-remove"></span>

            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>
