<%= form_for(@account) do |f| %>
  <% if @account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% @account.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= f.label :description %><br>
        <%= f.text_field :description, class: "form-control", placeholder: "Descrição da conta" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= f.label :balance %>
        <%= f.text_field :balance, class: "form-control", placeholder: "Saldo da conta" %>
      </div>
    </div>
  </div>

  <div class="text-center">
    <%= link_to "Voltar", accounts_path, class: "btn btn-danger" %>
    <%= f.submit "Confirmar", class: "btn btn-success" %>
  </div>
<% end %>
