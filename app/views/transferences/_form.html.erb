<%= form_for(@transference) do |f| %>
  <% if @transference.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transference.errors.count, "error") %> prohibited this transference from being saved:</h2>

      <ul>
      <% @transference.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= f.label :date %><br>
        <%= f.text_field :date, class: "form-control datepicker", placeholder: "Data da transferência" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= f.label :amount %>
        <%= f.text_field :amount, class: "form-control", placeholder: "Valor da transferência" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= f.label :debit_account %>
        <%= f.collection_select :debit_account, @account_options_for_select, :id, :description, {}, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= f.label :credit_account %>
        <%= f.collection_select :credit_account, @account_options_for_select, :id, :description, {}, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= f.label :obs %>
        <%= f.text_area :obs, cols: 50, rows: 5, class: "form-control", placeholder: "Observações..." %>
      </div>
    </div>
  </div>

  <div class="text-center">
    <%= link_to "Voltar", transferences_path, class: "btn btn-danger" %>
    <%= f.submit "Confirmar", class: "btn btn-success" %>
  </div>
<% end %>
